#!/usr/bin/env bash
# This script loops from 1 to 10 and prints different messages based on the iteration

# Initialize the counter
i=1

# Loop from 1 to 10
while [ $1 -le 10 ]; do
  if [ $1 -eq 4 ]; then
      echo "bad luck"
  elif [ $1 -eq 8 ]; then
      echo "good luck"
  else
      echo "Best School"
  fi
  # Increment the counter
  i=$((i + 1))
done
